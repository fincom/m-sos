<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.msos.android"
      android:versionCode="2"
      android:versionName="0.4">
    
    <uses-permission android:name="android.permission.INTERNET" />   
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> 
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> 
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
    
    	<!--  Libraries Used -->
    	<uses-library android:name="com.google.android.maps" />
        <uses-library android:name="android.test.runner" />
         
    	<!--  Main Activity -->
        <activity android:name=".activity.SosActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        	
        <!--  Settings Activity -->
        <activity android:name=".activity.SettingsActivity" android:label="@string/app_name" />
        
        <!--  Boot receiver -->
        <receiver android:name=".receiver.SosReceiver" android:label="@string/app_name"> 
		    <intent-filter> 
		       <action android:name="android.intent.action.BOOT_COMPLETED" /> 
		        <category android:name="android.intent.category.HOME" /> 
		    </intent-filter> 
		</receiver>
	
        <!--  Fall detect Service -->
        <service android:name=".service.FallDetectService"/>
      
    </application>

    <!--  Run instrumentation permission -->
    <uses-permission android:name="android.permission.RUN_INSTRUMENTATION" />
  
    <!--  Tests instrumentation -->
    <instrumentation android:name="com.msos.android.test.InstrumentationTestRunner"
                     android:targetPackage="com.msos.android"
                     android:label="M-SOS Tests"/>
                     
	<uses-sdk android:minSdkVersion="2"/>
	
</manifest> 